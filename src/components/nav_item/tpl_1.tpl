<div class="news-item type_1">
  <div class="main">
    <div class="title">
      <h1>{{title}}</h1>
    </div>
    <div class="pic">
      <img src="{{thumbnail_pic_s}}" alt="{{title}}" class="news_img">
    </div>
  </div>
  <div class="info">
    <span class="author">{{author}}</span>
    <span class="date">{{date}}</span>
  </div>
</div>