<div class="news-item type_0" data-page={{pageNum}} data-index={{index}} data-url={{url}} data-uniqueKey={{uniqueKey}}>
  <div class="main">
    <div class="title">
      <h1>{{title}}</h1>
    </div>
  </div>
  <div class="info">
    <span class="author">{{author}}</span>
    <span class="date">{{date}}</span>
  </div>
</div>